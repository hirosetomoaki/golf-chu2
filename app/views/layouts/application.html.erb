<!DOCTYPE html>
<html>
  <head>
    <title>GolfChu2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="text/javascript" src="https://js.pay.jp/v1/"></script>
    <script src="price.js"></script>
    <script src="preview.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_pack_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+JP:400,700,900&display=swap" rel="stylesheet">
    <%# <link rel="stylesheet" href="index.css">
    <link rel="stylesheet" href="user.css"> %>
  </head>
      <div class="header">
        <div class="heder-inner">
          <div class="nav">
           <%= link_to "GolChu", root_path %>
          </div>
          <div class="nav-item">
            <ul class="nav-page-list">
              <%= link_to '仲間探し', rooms_path, class: "list" %>
              <li class="list">コーチング</li>
              <%= link_to 'アイテム探し', items_path, class: "list" %>
            </ul>
          </div>
          <div class="nav-login">
            <% if user_signed_in? %>
              <%= link_to current_user.nickname , edit_user_path(current_user) %></li> 
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete  %></li> 
            <% else %>
              <%= link_to "ログイン", new_user_session_path %>
              <%= link_to "新規登録", new_user_registration_path, class: "post" %>
            <% end %>
          </div>
        </div>
      </div>
  <body>
     <%= yield %>
  </body>
</html>
