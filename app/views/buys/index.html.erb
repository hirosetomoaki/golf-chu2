<div class='chat-main'>
  <div class='chat-mide'>
   <%= link_to "商品一覧", items_path, class: :create_room %>
  </div>
  <div class='room_right'>
    <div class="item-box">
          <h1 class="name">
            <%= @item.product %>
          </h1>
          <div class="item-img-content">
            <%= image_tag @item.images[0],class: "item-box-img" %>
            <% @item.images.each do |image|%>
            <%= image_tag image ,class:"item-sub" %>
            <% end %> 
            <%# <% if @item.buy.present? %>
            <%# <div class="sold-out"> %>
              <%# <span>Sold Out!!</span> %>
            <%# </div> %>
            <%# <% end %> %> %>
          </div>
          <div class="buy-price-box">
            <span class="buy-price">
              <%= @item.price %>円
            </span>
            <span class="buy-postage">
              <%= @item.freight.name %>
            </span>
          </div>
          <%# 支払額の表示 %>
          <div class='item-payment'>
            <h1 class='item-payment-title'>
              支払金額
            </h1>
            <p class='item-payment-price'>
              ¥<%= @item.price %>
            </p>
          </div>
    </div>
      <%# /支払額の表示 %>
      <div class='info-haedline'>
      クレジットカード情報入力
      </div>
      <div class='card-input'>
          <%= form_with model: @buyaddress, url: item_buys_path, id: 'charge-form', class: 'form-wrap',local: true do |f| %>
             <%= render 'shared/error_messages', model: f.object %>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">カード情報</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">有効期限</label>
                <span class="indispensable">必須</span>
              </div>
              <div class='form-group-2'>
                  <%= f.text_area :exp_month, class:"input-expiration-date", id:"card-exp-month", placeholder:"例)3" %>
                  月
                  <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23" %>
                  年
              </div>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">セキュリティコード</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"4" %>
            </div>
          <% end %>
      </div>
      <div class='info-haedline'>
      配送先入力
      </div>
      <div class='card-input-2'>
          <%= form_with model: @buyaddress, url: item_buys_path, id: 'charge-form', class: 'form-wrap',local: true do |f| %>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">郵便番号</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"例）123-4567", maxlength:"8" %>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">都道府県</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.collection_select(:state_id, State.all, :id, :name, {}, {class:"select-box-2", id:"prefecture"}) %>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">市区町村</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"例）横浜市緑区" %>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">番地</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"例）青山1-1-1" %>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">建物名</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"例）柳ビル103" %>
            </div>
            <div class='form-group'>
              <div class='form-text-g'>
                <label class="form-text">電話番号</label>
                <span class="indispensable">必須</span>
              </div>
                <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"例）09012345678",maxlength:"11" %>
            </div>
            <div class='buy-btn'>
              <%= f.submit "購入" ,class:"buy-red-btn", id:"button" %>
            </div>
          <% end %>
      </div>
  </div>
</div>