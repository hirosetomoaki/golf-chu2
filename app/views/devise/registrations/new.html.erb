<div class="big-bg" >
  <div class="main-user">
  <div class="sign-l">
      <h2>Sign up</h2>
      <h3>新規作成</h3>
  </div>
  <div class="sing-r">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :nickname, "ニックネーム" %><br />
          <%= f.text_field :nickname, id:"user_name", placeholder:"例) ゴルちゃん" %>
          <span class="mast">必須</span>
        </div>

        <div class="field">
          <%= f.label :name, "名前" %><br />
          <%= f.text_field :name, id:"user_name", placeholder:"例) 山田太郎" %>
          <span class="mast">必須</span>
        </div>

        <div class="field">
          <%= f.label :name_initials, "フリガナ" %><br />
          <%= f.text_field :name_initials, id:"user_name", placeholder:"例) ヤマダタロウ" %>
          <span class="mast">必須</span>
        </div>


        <div class="field">
          <%= f.label :state, "お住まい" %><br />
          <%= f.text_field :state, id:"user_name", placeholder:"例) 東京"  %>
          <span class="mast">必須</span>
        </div>
        
        <div class="field">
          <%= f.label :best_score, "ベストスコア" %><br />
          <%= f.text_field :best_score, id:"user_name", placeholder:"例) 95" %>
        </div>

        <div class="field">
          <%= f.label :age, "年齢" %><br />
          <%= f.text_field :age, id:"user_name", placeholder:"例) 35" %>
          <span class="mast">必須</span>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"PC・携帯どちらでも可" %>
          <span class="mast">必須</span>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
          <span class="mast">必須</span>
        </div>

        <div class="field">
          <%= f.label :password_confirmation,"パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力" %>
          <span class="mast">必須</span>
        </div>

        <div class="actions">
          <%= f.submit "会員登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>