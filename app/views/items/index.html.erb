 <ul class='item-lists'>
     <% if @items.present? %>
        <% @items.each do |item| %>
          <li class='list'>
              <%= link_to item_path(item.id) do %>
                <div class='item-img-content'>
                   <%= image_tag item.images[0], class:"item-img" %>
                  <% if item.buy.present? %>
                  <div class='sold-out'>
                    <span>Sold Out!!</span>
                  </div>
                  <% end %>
                </div>
                <div class='item-info'>
                  <h3 class='item-name'>
                    <%= item.product %>
                  </h3>
                  <div class='item-price'>
                    <span><%= item.price %>å††<br><%= item.freight.name %></span>
                    <div class='star-btn'>
                      <%= image_tag "star.png", class:"star-icon" %>
                      <span class='star-count'>0</span>
                    </div>
                  </div>
                </div>
              <% end %>
          </li>
        <% end %>